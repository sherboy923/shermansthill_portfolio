<%= form_for (@inquiry) do |f| %>
	<%= render 'shared/error_messages', object: @inquiry %>

	<fieldset>

		<legend>Let's Network</legend>
		<div class="form-group">
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</div>

		<div class="form-group">
			<%= f.label :email %><br>
			<%= f.text_field :email %>
		</div>

		<div class="form-group">
			<%= f.label :subject %><br>
			<%= f.text_field :subject %>
		</div>

		<div class="form-group">
			<%= f.label :message %><br>
			<%= f.text_area :body %>
		</div>

		<div class="form-submit">
			<%= f.submit "Send" %>
		</div>

	</fieldset>

<% end %>